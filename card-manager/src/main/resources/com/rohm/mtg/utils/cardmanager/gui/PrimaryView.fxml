                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Settings">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openMtgTop8Settings" text="MtgTop8" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label fx:id="lbl_loadedCards" text="No file loaded" />
                  <ToggleButton fx:id="scanToggle" mnemonicParsing="false" text="Scan for Staples" />
               </children>
            </HBox>
            <TableView fx:id="cardTable" prefHeight="0.0" prefWidth="0.0" tableMenuButtonVisible="true" VBox.vgrow="SOMETIMES" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#addIfBlock" prefHeight="35.0" prefWidth="35.0" text="+">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Button disable="true" mnemonicParsing="false" prefHeight="35.0" text="Save" />
               </children>
            </HBox>
            <ScrollPane hbarPolicy="NEVER" pannable="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="v_filters" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </right>
</BorderPane>
